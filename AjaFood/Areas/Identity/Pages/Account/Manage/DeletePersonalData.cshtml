@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>Zrušení účtu</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Zrušením účtu přijdete o všechny data. Opravdu si přejete zrušit Váš účet? Tato akce již nelze vrátit zpět.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label">Heslo</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <br />
        <button class="w-25 btn btn-lg btn-danger" type="submit">Zrušit účet</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
