
@*znamená to, že cokoliv zde obdržíme, bude to IEnumerable<FoodCategory>.*@
@model IEnumerable<FoodCategory>

@{
    ViewData["Title"] = "Index";
    //List<int> objFoodsInCategories = ViewBag.foodsInCategories;  
}

@*<br />*@
<div class="container p-3">    
    <div class="row pt-4">
        <div class="col-6">
            <h1>Přehled kategorií</h1>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="FoodCategory" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i>&nbsp; Přidat kategorii</a>            
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Jméno kategorie
            </th>   
            <th>

            </th>
        </tr>        
    </thead>
    <tbody>
        @{
            int i = 0;
        }

        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @category.CategoryName
                </td>
                <td>                    
                    <a asp-controller="FoodCategory" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2"> <i class="bi bi-pen"></i> Upravit</a>					                        
                    <a class="btn btn-danger" asp-controller="FoodCategory" asp-action="Delete" asp-route-id="@category.Id"><i class="bi bi-trash"></i> Smazat</a>                     
                </td>
            </tr>            
                i++;            
        }
    </tbody>
</table>
