@model IEnumerable<AjaFood.Models.Food>

@{
    ViewData["Title"] = "Index";
}

@*<br />*@
<div class="container p-3">
    @*padding top = 4*@
    <div class="row pt-4">
        <div class="col-6">
            <h1>Databáze receptů</h1>
        </div>

        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i>&nbsp; Přidat recept</a>           
        </div>
    </div>
</div>

<table class="table table-bordered table-striped " style="width:100%; table-layout: fixed">
    <thead>        
        <tr>   
            <th class="col-2">
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodCategory.CategoryName)
            </th>
            <th class="col-4">
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                Nutriční hodnota na 100g
            </th>   
            <th class="col-2"></th>            
        </tr>        
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@("/Images/"+item.ImageName)"  alt="Losos" style="max-height:100% ; width: 100%; margin-top:10px;">    
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodCategory.CategoryName)
            </td>
            <td style="word-wrap: break-word">
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <p>@Html.DisplayNameFor(model => model.Fats) : @Html.DisplayFor(modelItem => item.Fats)</p>
                <p>@Html.DisplayNameFor(model => model.Carbohydrates) : @Html.DisplayFor(modelItem => item.Carbohydrates)</p>
                <p>@Html.DisplayNameFor(model => model.Proteins) : @Html.DisplayFor(modelItem => item.Proteins)</p>
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"> <i class="bi bi-pen"></i></a>                
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>                 
            </td>            
        </tr>
}
    </tbody>
</table>
